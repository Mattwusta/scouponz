<%- if controller_name != '登入' %>
  <%= link_to "登入", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != '註冊' %>
  <%= link_to "註冊", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != '' %>
  <%= link_to "忘記密碼 (您是否已經註冊過，卻忘了驗證您的EMAIL，請到您的EMAIL信箱裡尋找Chef29 的EMAIL並完成驗證信箱。）", new_password_path(resource_name) %> <br />
<% end -%>


<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

